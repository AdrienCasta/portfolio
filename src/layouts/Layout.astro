---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script is:inline>
			const theme = (() => {
				if (typeof localStorage !== 'undefined' && localStorage.getItem('adrien-castagliola-theme')) {
					return localStorage.getItem('adrien-castagliola-theme');
				}
				if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
					return 'dark';
				}
				return 'light';
			})();

			if (theme === 'light') {
				document.documentElement.classList.remove('dark');
			} else {
				document.documentElement.classList.add('dark');
			}
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	@layer base {
		@font-face {
			font-family: "Gabarito";
			font-weight: 400;
			src: url("/fonts/Gabarito-Regular.woff2") format("woff2");
		}
		@font-face {
			font-family: "Gabarito";
			font-weight: 700;
			src: url("/fonts/Gabarito-Bold.woff2") format("woff2");
		}
		@font-face {
			font-family: "Vollkorn";
			font-weight: 400;
			src: url("/fonts/Vollkorn-Regular.woff2") format("woff2");
		}
		@font-face {
			font-family: "Vollkorn";
			font-weight: 700;
			src: url("/fonts/Vollkorn-Bold.woff2") format("woff2");
		}

		html {
			font-family: "Vollkorn";
			font-weight: 400;
		}

		h1, h2, h3, h4, h5, h6 {
			@apply font-heading
		}
		
		p {
			@apply font-body
		}
	}
</style>
