---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	@layer base {
		@font-face {
			font-family: "Gabarito";
			font-weight: 400;
			src: url("/fonts/Gabarito-Regular.woff2") format("woff2");
		}
		@font-face {
			font-family: "Gabarito";
			font-weight: 700;
			src: url("/fonts/Gabarito-Bold.woff2") format("woff2");
		}
		@font-face {
			font-family: "Vollkorn";
			font-weight: 400;
			src: url("/fonts/Vollkorn-Regular.woff2") format("woff2");
		}
		@font-face {
			font-family: "Vollkorn";
			font-weight: 700;
			src: url("/fonts/Vollkorn-Bold.woff2") format("woff2");
		}

		html {
			font-family: "Vollkorn";
			font-weight: 400;
		}

		h1, h2, h3, h4, h5, h6 {
			@apply font-heading
		}
		
		p {
			@apply font-body
		}
	}
</style>
